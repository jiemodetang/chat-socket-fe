{
  "easycom": {
		"autoscan": true,
		"custom": {
			"^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
	        "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue",
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
			"^IncomingCall$": "@/components/IncomingCall.vue",
			"^CallScreen$": "@/components/CallScreen.vue",
			"^IncomingCallNotification$": "@/components/IncomingCallNotification.vue"
		}
	},
	
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "聊天"
      }
    },
    {
